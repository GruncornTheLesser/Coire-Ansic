{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "g++ build",
			"command": "g++",
			"args":[ "**.cpp", "-g", "-o", "${workspaceFolderBasename}.exe", "-std=c++23", "-fdiagnostics-color=always", "-fdiagnostics-show-location=once", "-time" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	],
	"version": "2.0.0"
}